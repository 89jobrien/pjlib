{
  "env": {
    "CLOUD_ML_REGION": "global",
    "CLOUDSDK_ACTIVE_CONFIG_NAME": "toptal-agent-ops",
    "CLAUDE_CODE_USE_VERTEX": "1"
  },
  "permissions": {
    "allow": [
      "Bash(brew install:*)",
      "Bash(brew tap:*)",
      "Bash(mkdir:*)",
      "Bash(vector validate:*)",
      "Bash(~/logs/applications/test.log)",
      "Bash(~/logs/scripts/script.log)",
      "Bash(tree ~/.claude:*)",
      "Bash(tree ~/Documents/Projects:*)",
      "Bash(tree ./:*)",
      "Bash(stow:*)",
      "Bash(test:*)",
      "WebFetch(domain:github.com)",
      "WebFetch(domain:raw.githubusercontent.com)",
      "WebFetch(domain:docs.anthropic.com)",
      "WebFetch(domain:www.anthropic.com)",
      "WebFetch(domain:openai.com)",
      "WebFetch(domain:docs.python.org)",
      "WebFetch(domain:developer.mozilla.org)",
      "WebFetch(domain:stackoverflow.com)",
      "WebFetch(domain:hn.algolia.com)",
      "WebFetch(domain:news.ycombinator.com)",
      "WebFetch(domain:dev.to)",
      "WebFetch(domain:www.reddit.com)",
      "WebFetch(domain:livekit.io)",
      "WebFetch(domain:docs.openpipe.ai)",
      "Bash(opencode:*)",
      "Bash(uvx:*)",
      "Bash(uv run:*)",
      "Bash(uv sync:*)",
      "Bash(uv lock:*)",
      "Bash(uv add:*)",
      "Bash(uv remove:*)",
      "Bash(uv update:*)",
      "Bash(ls:*)"
    ],
    "deny": [],
    "ask": []
  },
  "model": "claude-opus-4-5",
  "enabledMcpjsonServers": [],
  "disabledMcpjsonServers": [
    "memory",
    "context7",
    "fetch"
  ],
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "uv run ~/.claude/hooks/workflows/post_tool_use.py"
          }
        ]
      },
      {
        "matcher": "TodoWrite",
        "hooks": [
          {
            "type": "command",
            "command": "uv run ~/.claude/hooks/workflows/todo_sync.py"
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "bd prime"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Edit|Write|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "if echo \"$CLAUDE_FILE_PATHS\" | grep -qE '(\\.zshrc|\\.zshrc$)'; then echo 'BLOCK: ~/.zshrc is protected - edit manually if needed' >&2; exit 2; fi"
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "if echo \"$TOOL_INPUT\" | grep -qE '(gh repo edit.*--default-branch|gh api.*default_branch)'; then echo 'BLOCKED: Default branch must remain main.' >&2; exit 1; fi"
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "uv run ~/.claude/hooks/workflows/session_end.py"
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "uv run ~/.claude/hooks/workflows/session_start.py"
          },
          {
            "type": "command",
            "command": "uv run ~/.claude/hooks/context/codebase_map.py"
          }
        ]
      },
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "bd prime"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "uv run ~/.claude/hooks/workflows/stop.py"
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "uv run ~/.claude/hooks/workflows/subagent_stop.py"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "uv run ~/.claude/hooks/workflows/user_prompt.py"
          },
          {
            "type": "command",
            "command": "uv run ~/.claude/hooks/context/jit_context.py"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "bash -c '\"/Users/joe/.bun/bin/bun\" \"$(ls -td ~/.claude/plugins/cache/claude-hud/claude-hud/*/ 2>/dev/null | head -1)src/index.ts\"'"
  },
  "enabledPlugins": {
    "agent-sdk-dev@claude-plugins-official": false,
    "asana@claude-plugins-official": false,
    "atlassian@claude-plugins-official": false,
    "claude-mem@thedotmack": true,
    "code-review@claude-plugins-official": true,
    "commit-commands@claude-plugins-official": true,
    "feature-dev@claude-plugins-official": false,
    "github@claude-plugins-official": true,
    "gopls-lsp@claude-plugins-official": true,
    "gopls@claude-code-lsps": false,
    "greptile@claude-plugins-official": false,
    "linear@claude-plugins-official": false,
    "pr-review-toolkit@claude-plugins-official": false,
    "pyright-lsp@claude-plugins-official": true,
    "pyright@claude-code-lsps": false,
    "rust-analyzer-lsp@claude-plugins-official": true,
    "security-guidance@claude-plugins-official": false,
    "claude-hud@claude-hud": true
  },
  "alwaysThinkingEnabled": false
}
